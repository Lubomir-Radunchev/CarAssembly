@using CarAssembly.Database.Models
@using CarAssembly.ModelDtos.Assembly
@using CarAssembly.ModelDtos.CarDtos

@model ShowCar

@{

    var msg = TempData["error"];
}

@if (msg != null)
{
    <h3 class="alert-warning">@msg</h3>
}
<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

    <h2 class="heading-margin text-center">Car Results</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="CarForShowCar.Year"></label>
            <input asp-for="CarForShowCar.Year" class="form-control" placeholder="asd">
            <span asp-validation-for="CarForShowCar.Year" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CarForShowCar.Brand"></label>
            <input asp-for="CarForShowCar.Brand" class="form-control" placeholder="asd">
            <span asp-validation-for="CarForShowCar.Brand" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CarForShowCar.Model"></label>
            <input asp-for="CarForShowCar.Model" class="form-control" placeholder="asd">
            <span asp-validation-for="CarForShowCar.Model" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CarForShowCar.Kilometers"></label>
            <input asp-for="CarForShowCar.Kilometers" class="form-control" placeholder="asd">
            <span asp-validation-for="CarForShowCar.Kilometers" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AssemblyForShowCar.Description"></label>
            <input asp-for="AssemblyForShowCar.Description" class=" form-control" placeholder="asd">
            <span asp-validation-for="AssemblyForShowCar.Description" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AssemblyForShowCar.Condtion"></label>
            <input asp-for="AssemblyForShowCar.Condtion" class="form-control" placeholder="asd">
            <span asp-validation-for="AssemblyForShowCar.Condtion" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AssemblyForShowCar.Category"></label>
            <input asp-for="AssemblyForShowCar.Category" class="form-control" placeholder="asd">
            <span asp-validation-for="AssemblyForShowCar.Category" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AssemblyForShowCar.Picture"></label>
            <input asp-for="AssemblyForShowCar.Picture" class="form-control" placeholder="asd">
            <span asp-validation-for="AssemblyForShowCar.Picture" class="small text-danger"></span>
        </div>
        
      
    </form>

</div>
</div>